    <div class="container">  
        <div class="row">
            
            <div class="col-md-3 p-4 border rounded h-50 " >
                
                <%= render 'customers/customers/info' %>
                <%= render 'customers/posts/form', post: @post %>
                
            </div>
            <div class="col-md-8 offset-md-1">
                <% @customers.each do |customer| %>
                <div class=" col-8 p-4  border rounded mt-3 d-flex ">
                    <div class="col-4">
                        <% if customer.image.attached? %>
                            <%= image_tag customer.image%>
                        <% else %>
                            <%= image_tag 'no_image.jpg' %>
                        <% end %>
                    </div>
                    <div class="col-4">
                    <div><%= customer.name %></div>
                    <div><%#= costomer.content %></div>
                    <div><%= link_to "詳細", customer_path(customer.id) %></div>
                    </div>
                    
                </div>
                <% end %>
            </div>
        </div>
    </div>