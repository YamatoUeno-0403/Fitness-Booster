
    <div class="container">  
        <div class="row">
            
            <div class="col-md-3 p-4 mt-5 border rounded shadow h-50 bg-light" >
                <!--ユーザーサイドバー-->
                <%= render 'customers/customers/info' , post: @customer, customer: @customer %>
                 <!--投稿フォーム-->
                <%= render 'customers/posts/form', post: @post %>
                
            </div>
            
            <div class="col-md-8 offset-md-1">
                <div class=" col-md-9 p-4 mt-5 border rounded shadow bg-light">
                    
                    <div class="col d-flex">
                        <!--プロフィール画像-->
                        <div><%= render "customers/shared/image_attached", post: @customer %></div>
                        <div class="pl-2"><%= @customer.name %></div>
                        <!--フォローボタン-->
                        <div  class="offset-md-3"><%= render "customers/relationships/follow" , customer: @customer %></div>
                        
                        <% if current_customer.id == @customer.id %>
                            <div class="offset-md-3"><i class="fas fa-user-check fa-3x"></i></div>
                        <% end %>
                    </div>
                    
                    <div><%= @customer.introduction %></div>
                    
                    <% if current_customer.id == @customer.id %>
                        <div class="offset-md-10"><%= link_to "編集" , edit_customer_path(@customer.id),class: "btn btn-success" %></div>
                    <% end %>
                
                </div>
            </div>
        </div>
    </div>