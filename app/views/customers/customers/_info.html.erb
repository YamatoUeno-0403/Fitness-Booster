<table class="table" >
    <tbody>
        <% if post.image.attached? %>
                <%= image_tag post.image.variant(resize:'240x250')%>
        <% else %>
                <%= image_tag 'no_image.jpg' %>
        <% end %>
        <div class="col-md-12 pt-3 pb-3">名前：<%= link_to customer.name, customer_path(current_customer) %></div>
        <tr>
            <th>フォロー</th>
	        <th><%= link_to customer.followings.count, customer_followings_path(customer) %></th>
        </tr>
        <tr>
            <th>フォロワー</th>
	        <th><%= link_to customer.followers.count, customer_followers_path(customer) %></th>
        </tr>
    </tbody>
</table>    