<div class="text-center">
<h2>edit</h2>

<%= form_with model:@post, local:true do |f| %>
<%= render "customers/shared/error_messages", model: f.object %>

  <div class="field">
    <%= f.label :タグ %><br />
    <%= f.text_field :tag_list, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :投稿内容 %><br />
    <%= f.text_area :content, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "変更する" ,class:" btn btn-lg btn-primary mt-3"%>
  </div>
<% end %>
</div>