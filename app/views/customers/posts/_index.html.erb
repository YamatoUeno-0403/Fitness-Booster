                <% @posts.each do |post| %>
                <div class="col-8 pt-4 pb-4 mt-5 border rounded shadow bg-light">
                    
                    <div class="col-auto d-flex">
                        <!--プロフィール画像-->
                        <div class="col-2"><%= render "customers/shared/image_attached", post: post %></div>

                        <!--フォローボタン-->
                        <div id="follow_<%= post.customer_id %>" class="col-5 offset-md-5"><%= render "customers/relationships/follow",customer: post.customer %></div>
                    </div>
                    
                        <div class="col-5 pl-4"><%= link_to post.customer.name ,customer_path(post.customer.id)%></div>
                        
                        <!--タグ-->
                        <div class="p-2"><%= render 'customers/posts/tag_list', tag_list: post.tag_list %></div>
                        
                        <!----投稿画像 ----->
                        <div>
                            <% if post.post_image.attached? %>
                                <%= image_tag post.post_image.variant(resize:'450x400')  %>
                            <% end %>
                        </div>
                    
                        <div class="col-12 text-break mt-3"><%= post.content %></div>
                        
                    <div class="col-12 d-flex bd-highlight pt-5">
                          <div class="col-4 mr-4 bd-highlight"><%= l post.created_at,format: :short%></div>
                          <div class="ml-3 bd-highlight">いいね: <%= post.favorites.count %></div>
                          <div class=" ml-3 mr-1 bd-highlight">コメント:<%= post.post_comments.count %></div><!--コメント数-->
                          <div><%= link_to "詳細",post_path(post.id)%></div>
                          <% if current_customer.id == post.customer.id %>
                              <div><%= link_to "削除",post_path(post.id) ,method: :delete,remote: true %></div>
                          <% end %>
                    </div>
                </div>
                <% end %>