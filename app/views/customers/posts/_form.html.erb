    <%= form_with model:post , data: {remote: true} do  |f| %>

        <div class="field">
            <p>タグ(,でタグを区切れます)</p>
            <%= f.text_field :tag_list, class: 'form-control',value: post.tag_list.join(',') %>
　　    </div>
　　    
        <div class="form-group pb-4">
            <%= f.label :投稿内容 %>
            <%= f.text_area :content, class: 'form-control' %>
        </div>

        <label for="image">
             <span class="button">画像を選択</span><%= f.file_field  :post_image, id: "image" %>
        </label>
        <img id="preview" style="width:100%;">
        
        <div class="form-group pt-4">
            <input type="submit" value"送信する" name="commit" class="button-form">
        </div>
    <% end %>
    

        <script>
          $('#image').on('change', function (e) {
            var reader = new FileReader();
            reader.onload = function (e) {
                $("#preview").attr('src', e.target.result);
            }
            reader.readAsDataURL(e.target.files[0]);
        });
        </script>