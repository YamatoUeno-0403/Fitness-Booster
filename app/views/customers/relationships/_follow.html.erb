<% if current_customer != customer %>
        <% if current_customer.following?(customer) %>
          <%= link_to "フォロー外す", customer_relationships_path(customer),class:"btn btn-secondary" , method: :delete ,remote: true%>
        <% else %>
          <%= link_to "フォローする", customer_relationships_path(customer), class:"btn btn-primary" ,method: :post  ,remote: true%>
        <% end %>
<% end %>