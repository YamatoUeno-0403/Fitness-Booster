<h2>Following Customer</h2>
<% if @customers.exists? %>
<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
 <% @customers.each do |customer| %>
      <tr>
        <td><%= render "customers/shared/image_attached", post: customer  %></td>
        <td><%= customer.name %></td>
        <td>フォロー数:<%= customer.followings.count %></td>
        <td>フォロワー数:<%= customer.followers.count %></td>
        <td><%= link_to 'Show', customer_path(current_customer) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
  <p>ユーザーはいません</p>
<% end %>